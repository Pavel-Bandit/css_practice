

<header class="header">
     <div>
        {{> logo}}
      </div>

      <nav class="header_nav">
       <div class="header_nav_right">
        {{> nav list=header  }}
        </div>
      </nav>
    </header>

<main class="main">



  

{{#with info}}
<div class="info">
<div class="info_content">
<h1 class="info_title">{{title}}</h1>
<p class="info_text">{{description}}</p>
</div>
</div>
{{/with}}

{{#with form}}
<form class="form">
  <h2 class="form_title">{{title}}</h2>

<div class="form_input_list">
  {{#each inputs}}
<input type="{{type}}" placeholder="{{placeholder}}"  class="form_input" name="{{name}}" id="{{id}}">
  {{/each}}
</div>

  <div class="form_checkbox">
    <input type="checkbox" name="{{checkbox.name}}">
    <label>{{checkbox.label}}</label>
  </div>
  <button type="submit" class="form_button">{{button}}</button>
  <p class="form_info">{{info}}</p>
</form>
{{/with}}
</main>

{{#with updates}}
<div class="updates">
  <h1 class="upd_title">{{title}}</h1>
 {{#each list}}
<div class="upd">
  <strong class="upd_name">{{nickname}}</strong>
  <p class="upd_text">{{description}}</p>
</div>
{{/each}}
{{#with show_all}}
  <a href="{{url}}" class="updates_link">{{text}}</a>
  {{/with}}
</div>
{{/with}}


{{#with expirience}}
<div class="expirience">
  
  <div class="exp_title"><h1 class="ex_title">{{title}}</h1></div>

  <div class="ex_box">
  {{#each list}}
<div class="exp_box">
  <strong class="ex_strong">{{name}}</strong>
  <p class="ex_details">{{details}}</p>
</div>

  {{/each}}
  <div class="ex_badge"><h4 class="badge_text">{{badge}}</h4></div>
  </div>

</div>
{{/with}}


<footer class="page_block">

<div class="row footer">
  <div class="col-3">
{{> logo}}
<span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  

{{#each footer}}
<div class="col-3">
<span class="footer_title">{{title}}</span>
 {{> nav list=links isVertical=true  }}
</div>
{{/each}}
</div>
</footer>


