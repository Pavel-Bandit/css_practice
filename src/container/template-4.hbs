

<header class="header">
     <div>
        {{> logo}}
      </div>

      <nav class="header_nav">
       <div class="header_nav_right">
        {{> nav list=header  }}
        </div>
      </nav>
    </header>

{{#with main}}
<div class="main">
<div class="main_content">
<h1 class="main_title">{{heading}}</h1>
<p class="main_text">{{description}}</p>
<div class="main_action">
  <a href="{{href}}" class="main_button" >{{button}}</a>
</div>
</div>
<img src="{{image}}" alt="Hero image" class="main_image">
</div>
{{/with}}

<main class="blog">
  {{#each featured}}
  {{> cardBlog-2 data=this}}
  {{/each}}
</main>



<div class="actions">
{{#each actions}}
<div class="actions_content">
  <h3 class="actions_title">{{heading}}</h3>
  <div class="actions_but"><a href="{{url}}" class="  actions_button">{{text}}</a></div>
</div>
{{/each}}
</div>


<footer class="page_block">

<div class="row footer">
  <div class="col-3">
{{> logo}}
<span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  

{{#each footer}}
<div class="col-3">
<span class="footer_title">{{title}}</span>
 {{> nav list=links isVertical=true  }}
</div>
{{/each}}
</div>
</footer>


